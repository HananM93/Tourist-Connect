<div id="<%= dom_id guide %>">
  <p>
    <strong>Name:</strong>
    <%= guide.name %>
  </p>

  <p>
  <strong>Image:</strong>
  <%= image_tag(guide.image, style:"width:300px; height:300px") if guide.image.attached?%>
  
</p>

  <p>
    <strong>Location:</strong>
    <%= guide.location %>
  </p>

  <p>
    <strong>Rate:</strong>
    <%= guide.rate %>
  </p>

</div>
